@model DSW_I_T3_PECHOFRANCO.Models.Disco

<h2>@(Model?.Id == 0 ? "Crear Nuevo Disco" : "Editar Disco")</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Capacidad"></label>
        <input asp-for="Capacidad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ancho"></label>
        <input asp-for="Ancho" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Peso"></label>
        <input asp-for="Peso" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Profundidad"></label>
        <input asp-for="Profundidad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control">
            <option>SSD</option>
            <option>HDD</option>
            <option>NVMe</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
